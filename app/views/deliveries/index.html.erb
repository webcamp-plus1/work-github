<h2>配送先登録/一覧</h2>
<div class="row">
	<div class="col">
		<%= form_for(@delivery) do |f| %>
			<table>
				<tr>
					<th>郵便番号(ハイフンなし)</th>
					<th>
						<%= f.text_field :postal_code, class: "postal_code" %>
					</th>
				</tr>
				<tr>
					<th>住所</th>
					<th>
						<%= f.text_field :destination, class: "destination" %>
					</th>
				</tr>
				<tr>
					<th>宛名</th>
					<th>
						<%= f.text_field :addressee, class: "addressee" %>
					</th>
					<th></th>
					<th>
						<%= f.submit "登録する", class: "btn btn-primary", style: "margin-left: 100px;" %>
					</th>
				</tr>
			</table>
		<% end %>
	</div>


	<div class="col-xs-9">
		<table class="table" style="margin-top: 20px;">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>	
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @deliveries.each do |delivery| %> 
					<tr>
						<td><%= delivery.postal_code %></td>
						<td><%= delivery.destination %></td>
						<td><%= delivery.addressee %></td>
						<td>
							<%= link_to "編集する",  edit_delivery_path(delivery), class: "btn-sm btn-success" %>
						</td>
						<td>
							<%= link_to "削除する", delivery_path(delivery), method: :delete, class: "btn-sm btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>