<h1>マイページ</h1>

<table>
	<tr>
		<th>登録情報</th>
		<th><%= link_to '編集する', edit_member_path(@member), class: "btn btn-default", style: "margin-left: 10px;" %></th>
		<th><%= link_to 'パスワードを変更する', '#', class: "btn btn-default", style: "margin-left: 10px;" %></th>
	</tr>
</table>

<table class="table table-bordered" style="margin-top: 20px; margin-bottom: 20px; width: 90%;" >

	<tr>
		<th>氏名</th>
		<th><%= @member.last_name %>　<%= @member.first_name %></th>
	</tr>

	<tr>
		<th>カナ</th>
		<th><%= @member.last_name_kana %><%= @member.first_name_kana %></th>
	</tr>
	<tr>
		<th>郵便番号</th>
		<th><%= @member.postal_code %></th>
	</tr>
	<tr>
		<th>住所</th>
		<th><%= @member.address %></th>
	</tr>
	<tr>
		<th>電話番号</th>
		<th><%= @member.phone_number %></th>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<th><%= @member.address %></th>
	</tr>

</table>

<table>
	<tr>
		<th>配送先</th>
		<th><%= link_to '一覧を見る', deliveries_path, class: "btn btn-default", style: "margin-left: 10px;" %></th>
	</tr>

	<tr>
		<th>注文履歴</th>
		<th><%= link_to '一覧を見る', '#', class: "btn btn-default", style: "margin-left: 10px;" %></th>
	</tr>
</table>