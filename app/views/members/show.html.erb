<h1>マイページ</h1>

<table>
	<tr>
		<th>登録情報</th>
		<th><%= link_to '編集する', edit_members_path, class: "btn btn-primary", style: "margin-left: 10px;" %></th>
		<th><%= link_to 'パスワードを変更する', edit_member_password_path, class: "btn btn-primary", style: "margin-left: 10px;" %>
	
		</th>
	</tr>
</table>

<table class="col-md-8 table table-bordered" style="margin-top: 20px; margin-bottom: 20px; width: 90%;" >

	<tr>
		<th class="t-color">氏名</th>
		<th><%= @member.last_name %>　<%= @member.first_name %></th>
	</tr>

	<tr>
		<th class="t-color">カナ</th>
		<th><%= @member.last_name_kana %><%= @member.first_name_kana %></th>
	</tr>
	<tr>
		<th class="t-color">郵便番号</th>
		<th><%= @member.postal_code %></th>
	</tr>
	<tr>
		<th class="t-color">住所</th>
		<th><%= @member.address %></th>
	</tr>
	<tr>
		<th class="t-color">電話番号</th>
		<th><%= @member.phone_number %></th>
	</tr>
	<tr>
		<th class="t-color">メールアドレス</th>
		<th><%= @member.email %></th>
	</tr>

</table>

<table class="table-btn">
	<tr>
		<th>配送先</th>
		<th><%= link_to '一覧を見る', deliveries_path, class: "btn btn-primary", style: "margin-left: 10px;" %></th>
	</tr>
	<tr></tr>
	<tr>
		<th>注文履歴</th>
		<th><%= link_to '一覧を見る', orders_path, class: "btn btn-primary", style: "margin-left: 10px;" %></th>
	</tr>
</table>