<div class="row">
	<div class="col-md-6 col-md-offset-1",  style="margin-bottom: 10px;">
		<h4 class="show-member-title">マイページ</h4>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<table>
			<tr>
				<th>登録情報</th>
				<th><%= link_to '編集する', edit_members_path, class: "btn btn-primary", style: "margin-left: 10px;", data: {"turbolinks"=>false} %></th>
				<th><%= link_to 'パスワードを変更する', edit_member_password_path, class: "btn btn-primary", style: "margin-left: 10px;" %></th>
			</tr>
		</table>

		<table class="table table-bordered table-condensed" style="margin-top: 20px; margin-bottom: 20px;" >
			<tr>
				<th class="t-color">氏名</th>
				<th><%= @member.last_name %>　<%= @member.first_name %></th>
			</tr>
			<tr>
				<th class="t-color">カナ</th>
				<th><%= @member.last_name_kana %><%= @member.first_name_kana %></th>
			</tr>
			<tr>
				<th class="t-color">郵便番号</th>
				<th><%= @member.postal_code %></th>
			</tr>
			<tr>
				<th class="t-color">住所</th>
				<th><%= @member.address %></th>
			</tr>
			<tr>
				<th class="t-color">電話番号</th>
				<th><%= @member.phone_number %></th>
			</tr>
			<tr>
				<th class="t-color">メールアドレス</th>
				<th><%= @member.email %></th>
			</tr>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-8">
		<table class="table-condensed">
			<tr>
				<th>配送先</th>
				<th><%= link_to '一覧を見る', deliveries_path, class: "btn btn-primary", style: "margin-left: 10px;" %></th>
			</tr>
			<tr>
				<th>注文履歴</th>
				<th><%= link_to '一覧を見る', orders_path, class: "btn btn-primary", style: "margin-left: 10px;" %></th>
			</tr>
		</table>
	</div>
</div>