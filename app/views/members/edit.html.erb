<div class="row">
  <div class="col-md-6 col-md-offset-1" style="margin-bottom: 10px;">
    <h4 class="edit-member-title">登録情報編集</h4>
  </div>
</div>

<div class="row">
  <div class="col-md-10">
    <%= form_for(@member, url: members_path) do |f| %>
      <% if @member.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

          <ul>
          <% @member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <table class="table-condensed">
      <div class="form-group">
        <tr>
          <th><%= f.label :名前 %></th>
          <th><%= f.label :'(姓)' %></th>
          <th><%= f.text_field :last_name, autofocus: true, class: "last_name" %></th>
          <th><%= f.label :'(名)' %></th>
          <th><%= f.text_field :first_name, autofocus: true, class: "first_name" %></th>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <th><%= f.label :フリガナ %></th>
          <th><%= f.label :'(セイ)' %></th>
          <th><%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %></th>
          <th><%= f.label :'(メイ)' %></th>
          <th><%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %></th>
        </tr>
      </div>
      <div class="form-group">
        <tr>
        	<th><%= f.label :メールアドレス %></th>
        	<th></th>
        	<th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email" %></th>
        </tr>
      </div>
      <div class="form-group">
        <tr>
        	<th><%= f.label :'郵便番号(ハイフンなし)' %></th>
        	<th></th>
        	<th><%= f.text_field :postal_code, autofocus: true, class: "postal_code" %></th>
        </tr>
      </div>
    </table>
    <table class="table-condensed">
      <div class="form-group">
        <tr>
        	<th><%= f.label :'住所'%></th>
        	<th></th>
        	<th><%= f.text_area :address, autofocus: true, class: "address address-area" %></th>
      	</tr>
      </div>
    </table>
    <table class="table-condensed">
      <div class="form-group">
        <tr>
        	<th>電話番号(ハイフンなし)</th>
        	<th></th>
        	<th><%= f.text_field :phone_number, autofocus: true, class: "phone_number phone-number-area" %></th>
        </tr>
      </div>
    </table>
  </div>
</div>

<div class="row ">
  <div class="col-md-10">
    <table>
      <tr>
        <div class="actions">
          <th><%= f.submit "編集内容を保存する", class: "btn btn-primary", style: "margin: 20px 40px 20px 200px;" %><th>
        </div>
      <% end %>
        <div class="unsubscribe">
          <th><%= link_to "退会する", unsubscribe_screen_path, class: "btn btn-danger", style: "margin: 20px 145px;" %></th>
        </div>
      </tr>
    </table>
  </div>
</div>