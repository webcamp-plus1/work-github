<div class=“row”>
  <div class="col-md-10 col-md-offset-2">
		<h3 class="order-confirm-title">注文情報確認</h3>
	</div>
</div>

<div class=row>
	<div class="col-md-8 col-md-offset-1">
		<table class="table table-bordered">
			<thead class="t-color">
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @sum = 0 %>
				<% current_member.cart_items.each do |cart_item| %>
				<tr>
					<td><%= attachment_image_tag cart_item.item, :image, :fill, 100, 50, format: 'jpeg', fallback: "no_image.jpg" %>
							<%= cart_item.item.name %></td>
					<td><%= (cart_item.item.tax_excluded_price * 1.1).round(0).to_s(:delimited) %></td>
					<td><%= cart_item.count %></td>
					<td><%= ((cart_item.item.tax_excluded_price * 1.1) * (cart_item.count)).round(0).to_s(:delimited) %></td>
					<% @sum += ((cart_item.item.tax_excluded_price * 1.1) * (cart_item.count)).round(0) %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-3">
		<table class="table table-bordered">
			<tr>
				<th class="t-color">送料</th>
				<th>800円</th>
			</tr>
			<tr>
				<th class="t-color">商品合計</th>
				<th><%= @sum.to_s(:delimited) %>円</th>
			</tr>
			<tr>
				<th class="t-color">請求合計</th>
				<th>
					<%= (@sum + 800).to_s(:delimited) %>円</th>
			</tr>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<table class="table-condensed">
			<tr>
				<th class="order-confirm-choice-item">支払方法</th>
				<th><% if (@order.payment_method == 1) %>　　銀行支払
				<% else %>　　クレジットカード<% end %>
			</tr>
			<tr>
				<th class="order-confirm-choice-item">お届け先</th>
				<th>　　<%= @order.postal_code %><%= @order.delivery_target_address %></th>
			<tr>
				<th></th>
				<th>　　<%= @order.addressee %></th>
			</tr>
		</table>
	</div>
</div>

<div class="row">
	<%= form_for(@order, url: "/orders/create") do |f| %>
		<div class="col-md-1 col-md-offset-5">
			<%= f.hidden_field :payment_method %>
			<%= f.hidden_field :postal_code %>
			<%= f.hidden_field :addressee %>
			<%= f.hidden_field :delivery_target_address %>
			<%= f.hidden_field :tortal_prace, :value => @sum + 800 %>
			<%= f.submit '購入を確定する', class: 'btn btn-success' %>
		</div>
	<% end %>
</div>
