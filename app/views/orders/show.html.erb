<h1>注文履歴詳細</h1>

<div class="col-md-8">
	<h4>注文情報</h4>
	<table class="table table-bordered">
		<tr>
			<th class="t-color">注文日</th>
			<th><%= @order.created_at.to_s(:datetime_jp) %></th>
		</tr>
		<tr>
			<th class="t-color">配送先</th>
			<th><%= @order.postal_code %><br>
			<%= @order.delivery_target_address %><br>
			<%= @order.addressee %></th>
		</tr>
		<tr>
			<th class="t-color">支払方法</th>
			<th><% if (@order.payment_method == 1) %>銀行支払
				<% else %>クレジットカード<% end %>
			</th>
		</tr>
		<tr>
			<th class="t-color">ステータス</th>
			<th><%= @order.status %></th>
		</tr>
	</table>
</div>

<div class="col-md-4">
	<h4>請求情報</h4>

		<!-- 商品合計金額計算 -->
		<% @sum = 0 %>
		<% @order.order_item.each do |order_item| %>
		<% @sum += ((order_item.orderded_price) * (order_item.count)) %>
		<% end %>


	<table class="table table-bordered">
		<tr>
			<th class="t-color">商品合計</th>
			<th><%= ((@sum) * 1.1).round(0).to_s(:delimited) %>円</th>
		</tr>
		<tr>
			<th class="t-color">配送料</th>
			<th>800円</th>
		</tr>
		<tr>
			<th class="t-color">ご請求額</th>
			<th><%= (((@sum) * 1.1) + 800).round(0).to_s(:delimited) %>円</th>
		</tr>
	</table>
</div>
<div class="row">
	<div class="col-md-10">
		<h4>請求情報</h4>
		<table class="table table-bordered">
			<thead class="t-color">
				<tr>
					<th>商品</th>
					<th>単価(税込)</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @order.order_item.each do |order_item| %>
				<tr>
					<td>
						<%= order_item.item.name %>
					</td>
					<td>
						<%= (order_item.orderded_price * 1.1).round(0).to_s(:delimited) %>
					</td>
					<td>
						<%= order_item.count %>
					</td>
					<td>
						<%= ((order_item.orderded_price * 1.1) * (order_item.count)).round(0).to_s(:delimited) %>
					</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>