<h1>Orders#new</h1>
<div class="row">
<h3>注文情報入力</h3>

<%= form_for(@order) do |f| %>
<h3>支払い方法</h3>
	<table>
		<tr>
			<th>
        <%= f.radio_button :payment_method, :card %>
        <%= f.label :payment_method, "クレジットカード" %>
      </th>
      <th>
        <%= f.radio_button :payment_method, :bank %>
        <%= f.label :payment_method, '銀行振込' %>
      </th>
		</tr>
	</table>

	<h3>お届け先</h3>
	<table>
		<tr>
			<!-- ラジオボタンif文で保存するデータを変更する -->
			<th>
        <%= f.radio_button :delivery_target_address, :current_member %>
        <%= f.label :delivery_target_address, "ご自身の住所" %>
        <%= current_member.postal_code %>
        <%= current_member.address %>
        <%= current_member.last_name %>
        <%= current_member.first_name %>s
      </th>
      <th>
        <%= f.radio_button :delivery_target_address, :deliveries %>
        <%= f.label :delivery_target_address, '登録済住所から選択' %>
        hhhhhhhhhhhhh
      </th>

		</tr>
	</table>
	<%= f.submit class: 'btn btn-primary col-xs-12'%>
<% end %> 

</div>
