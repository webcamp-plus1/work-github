<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!-- header-nav  リンク先はのちに追記します -->
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if member_signed_in? %>
          <li class="">
            <%= link_to "マイページ", "#" %>
          </li>
          <li class="">
            <%= link_to '商品一覧', "#" %>
          </li>
          <li class="">
            <%= link_to 'カート', "#" %>
          </li>
          <li class="">
            <%= link_to 'ログアウト', destroy_member_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="">
            <%= link_to 'About', "/homes/about" %>
          </li>
          <li class="">
            <%= link_to '商品一覧', "#" %>
          </li>
          <li class="">
            <%= link_to "新規登録", new_member_registration_path %>
          </li>
          <li class="">
            <%= link_to "ログイン", new_member_session_path %>
          </li>
        <% end %>
      </ul>
    </div>


    <%= yield %>
  </body>
</html>
