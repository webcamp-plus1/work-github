<h1>Carts#index</h1>


<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @cart_items.each do |cart_item| %>
			<tr>
				<td><%= @item.name %></td>
				<td><%= @item.tax_excluded_price %></td>
				<td>count</td>
				<td>合計</td>
				<td><%= link_to "削除する", cart_path(cart), method: :delete, class: "btn-sm btn-danger" %></td>
			</tr>
		<% end %>
	</tbody>
</table>