<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<h2 class="orders-index" style="margin-bottom: 30px;">管理者注文履歴一覧</h2>
		<table class="table table-bordered">
			<!-- カート内商品の繰り返し必要 -->
			<thead class="t-color">
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @member.orders.each do |order| %>
					<tr>
						<td>
							<%= link_to admins_order_path(order), data: {"turbolinks"=>false} do %>
								<%= order.created_at.to_s(:datetime_jp) %>
							<% end %>
						</td>
						<td><%= order.member.last_name %><%= order.member.first_name %></td>
						<td><%= order.order_items.count %></td>
						<td>
							<% if (order.status == 'waiting')%>入金待ち
		     			<% elsif (order.status == 'confirm')%>入金確認
		     			<% elsif (order.status == 'in_production')%>製作中
		     			<% elsif (order.status == 'preparing')%>発送準備中
		     			<% elsif (order.status == 'done')%>発送済み
		     			<% end %>
			     	</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>