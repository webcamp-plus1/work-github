<div class="row">
  <div class="col">
    <h2>ジャンル編集</h2>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= form_for(@genre, url: admins_genre_path) do |f| %>
      <table>
        <tr>
          <th>ジャンル</th>
          <th>
            <%= f.text_field :name, class: "name" %>
          </th>
          <th>
            <%= f.radio_button :is_void_flag, true %>
            <%= f.label :is_void_flag, '有効', value: true %>
            <%= f.radio_button :is_void_flag, false %>
            <%= f.label :is_void_flag, '無効', value: false %>
          </th>
          <th>
            <%= f.submit "変更を保存する", class: "btn btn-primary" %>
          </th>
        </tr>
      </table>
    <% end %>
  </div>
</div>