<div class="row">
	<div class="col">
		<h1>商品一覧</h1>
		<table class="item-table">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
					<tr>
						<th><%= item.id %></th>
						<th><%= item.name %></th>
						<th><%= item.tax_excluded_price %></th>
						<th><%= item.genre %></th>
						<th><%= item.is_sales_status %></th>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
