<div class="row">
	<div class="col">
		<h1>商品一覧</h1>
	</div>
	<div class="col-8">
		<%= link_to new_admins_item_path do %>
		<button type="button" class="btn btn-primary btn-circle">＋</button>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col">
		<table class="table">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
					<tr>
						<th><%= item.id %></th>
						<th>
							<%= link_to admins_item_path(item) do %>
								<%= item.name %></th>
							<% end %>
						<th><%= item.tax_excluded_price %></th>
						<th><%= item.genre.name %></th>
						<th><%= item.is_sales_status %></th>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
