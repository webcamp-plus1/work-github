<h1>Items#show</h1>
<div class="row">
	<div class="col-4">
		<h2>商品詳細</h2>
	</div>
	<div class="col-8">
		<table>
			<tr>
				<th>商品名</th>
				<th><%= @item.name %></th>
			</tr>
			<tr>
				<th>商品説明</th>
				<th><%= @item.description %></th>
			</tr>
			<tr>
				<th>ジャンル</th>
				<th><%= @item.genre.name %></th>
			</tr>
			<tr>
				<th>税込価格（税抜価格）</th>
				<th><%= @item.tax_excluded_price %>円</th>
			</tr>
			<tr>
				<th>販売ステータス</th>
				<th><%= @item.is_sales_status %></th>
			</tr>
		</table>
	</div>
</div>
